<resources>
    <style name="TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Bold.Light1">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="TextAppearance.Small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.Small.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Blue">
        <item name="android:textColor">@color/text_blue</item>
    </style>

    <style name="TextAppearance.Blue.Light">
        <item name="android:textColor">@color/text_blue_light</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<merge
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/layout_margin"
    tools:parentTag="android.widget.RelativeLayout">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="44dp"
        android:layout_height="44dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar"
        android:layout_marginLeft="8dp"
        android:textAppearance="@style/TextAppearance.Blue.Light"
        style="@style/SingleLineTextView"
        tools:text="Hong Duan"/>

    <TextView
        android:id="@+id/reputation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar"
        android:layout_below="@id/name"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/TextAppearance.Small.Bold"
        tools:text="1079"/>

    <top.defaults.kotlinoverflow.view.Badges
        android:id="@+id/badges"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/reputation"
        android:layout_below="@id/name"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="9dp"/>

</merge>